<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barscanner">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BarScanner">
        <activity android:name=".ewallet.EWalletActivity"></activity>
        <activity android:name=".MainActivity2" />
        <activity android:name=".Offers" />
        <activity android:name=".Scan" />
        <activity android:name=".AdminAddItem" />
        <activity
            android:name=".Menumanage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".ProductSearch" />
        <activity android:name=".Maintainproducts" />
        <activity android:name=".ProductDetails" />
        <activity android:name=".ShoppingCart" />
        <activity android:name=".RegisterAdmin" />
        <activity android:name=".Inventory" />
        <activity android:name=".AdminDashboard" />
        <activity android:name=".Register" />
        <activity android:name=".Login" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.BarScanner.NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Capture"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>